{
  "version": 2,
  "builds": [
    {
      "src": "apps/admin-console/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../../dist/apps/admin-console"
      }
    },
    {
      "src": "apps/landing-page/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../../dist/apps/landing-page"
      }
    },
    {
      "src": "apps/shop-dashboard/package.json",
      "use": "@vercel/static-build", 
      "config": {
        "distDir": "../../dist/apps/shop-dashboard"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/admin-console/$1"
    },
    {
      "src": "/shop/(.*)", 
      "dest": "/shop-dashboard/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/landing-page/$1"
    }
  ]
}
